<h3 class="ui header">{{t "forms.i-i-s-kursovaya-rabota-2-прикрепление-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursovaya-rabota-2-прикрепление-e.спрСотр-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.спрСотр
      displayAttributeName="фио Сотрудника"
      autocomplete=true
      relationName="спрСотр"
      projection="СпрСотрL"
      title=(t "forms.i-i-s-kursovaya-rabota-2-прикрепление-e.спрСотр-caption")
      readonly=readonly
      componentName="спрСотрLookup"
      class=(if (v-get validationModel "спрСотр" "isInvalid") "error")
      data-test-i-i-s-kursovaya-rabota-2-прикрепление-e-спрСотр=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "спрСотр" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.спрСотр.фио
      class=(if (v-get validationModel.спрСотр "фио" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya-rabota-2-прикрепление-e.спрСотр.фио-caption")
      data-test-i-i-s-kursovaya-rabota-2-прикрепление-e-спрСотр-фио=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.спрСотр "фио" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.спрСотр.группа.наименование
      class=(if (v-get validationModel.спрСотр.группа "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya-rabota-2-прикрепление-e.спрСотр.группа.наименование-caption")
      data-test-i-i-s-kursovaya-rabota-2-прикрепление-e-спрСотр-группа-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.спрСотр.группа "наименование" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.спрСотр.дисциплина.наименование
      class=(if (v-get validationModel.спрСотр.дисциплина "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya-rabota-2-прикрепление-e.спрСотр.дисциплина.наименование-caption")
      data-test-i-i-s-kursovaya-rabota-2-прикрепление-e-спрСотр-дисциплина-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.спрСотр.дисциплина "наименование" "message")}}
  </div>
</form>
